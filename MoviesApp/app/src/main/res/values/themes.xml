<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoviesApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="RatingBar" parent="Theme.MaterialComponents.DayNight">
        <item name="ratingBarStyle">@style/Controls.RatingBar</item>
    </style>

    <style name="Controls.RatingBar" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:isIndicator">true</item>
    </style>

    <style name="RatingBarMovieDetail" parent="Theme.MaterialComponents.DayNight">
        <item name="ratingBarStyle">@style/Controls.RatingBarMovieDetail</item>
    </style>

    <style name="Controls.RatingBarMovieDetail" parent="Widget.AppCompat.RatingBar.Indicator">
        <item name="android:isIndicator">true</item>
    </style>


    <style name="AppSearchView" parent="Widget.AppCompat.SearchView" >
        <!-- Query Text Color -->
        <item name="android:textColorPrimary">@color/movie_green_light</item>
        <!-- Hint Color -->
        <item name="android:textColorHint">@color/movie_green_light</item>
        <!-- Icon Color -->
        <item name="android:tint">@color/movie_green_light</item>
    </style>

</resources>